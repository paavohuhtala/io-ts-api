    "io-ts-api-express": "1.0.0",
    "io-ts-api-fetch": "1.0.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "ts-node": "^8.3.0",
    "nodemon": "1.19.1",
    "typescript": "^3.5.3"
  }
}
